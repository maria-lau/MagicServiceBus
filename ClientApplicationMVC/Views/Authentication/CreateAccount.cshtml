<!--
    This is the html page that opens when a user navigates
    to the create an account page
-->

<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>


<!-- The remainder of this file is to be completed by students in milestone 2 -->

<link href="https://fonts.googleapis.com/css?family=Montserrat:400i,900" rel="stylesheet">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<div class="w3-container w3-display-middle">
    <h1 class="w3-animate-left">
        <a style=color:#785ff4>Create </a><a style=color:#1185f9>An </a><a style=color:#3ae2fc>Account</a>
    </h1>
    <p id="hi"></p>
    @using (Html.BeginForm("CreateAccountPost", "Authentication", FormMethod.Post,
        new { id = "createAccountForm", onsubmit = "return validateCreateAccountForm()" }))
    {
    <div class="container" style="text-align:center;">
        <label>Username:</label><br />
        @Html.TextBox("usernameData")<br />

        <label>Password:</label><br />
        @Html.Password("passwordData")<br />

        <label>Address:</label><br />
        @Html.TextBox("addressData")<br />

        <label>Email:</label><br />
        @Html.TextBox("emailData")<br />

        <label>Phone:</label><br />
        @Html.TextBox("phoneData")<br />

        <label>Account Type:  </label>
        <select name="accountType">
            <option value="user">User</option>
            <option value="business">Business</option>
            <option value="notspecified">Other</option>
        </select>
        <br />
        <br />
    </div>
        <div style="text-align:center;">
            <input type="submit" style="float: none; background-color: #1185f9;color: white; padding: 10px 15px; margin: 8px 0; border: none; cursor: pointer; width: 200px;" value="Create Account" />
        </div>
    }
    </div>

